@{
    ViewData["Title"] = "Expenses";
}
@model IEnumerable<ExpensesManagement.Models.Expense>;
<div class="container">
    <div align="center" class="bg-dark text-white font-weight-bold p-5 rounded">
        <h1>Expense Management System</h1>
        <h2 class="mb-5">Here are your expenses</h2>
        <a asp-action="create"><button class="btn btn-outline-success col-md-12">ADD</button></a>
    </div>
    <hr />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Expense name</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() != 0)
            {
                int counter = 0;
                
                @foreach (var item in Model)
                {
                    counter++;
                    <tr align="center">
                        <td>@counter</td>
                        <td>@item.ExpenseName</td>
                        <td>@item.Amount</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>
                            <a asp-action="UpdateExpenses" asp-route-expenseId="@item.Id"><button class="btn btn-primary btn-sm mx-1">Edit</button></a>
                            <a asp-action="Delete" asp-route-expenseId="@item.Id"><button class="btn btn-danger btn-sm mx-1">Delete</button></a>
                        </td>
                    </tr>
                }
            } 
            else
            {
                <tr align="center"><td colspan="5">Naks galing ahh</td></tr>
            }
        </tbody>
    </table>
</div>