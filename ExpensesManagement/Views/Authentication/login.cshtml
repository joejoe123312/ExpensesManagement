@{
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<h1>Login</h1>
<hr />

<form action="/Login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl)" method="post">
    <div class="form-group">
        <label>Username</label>
        <input type="text" name="username" value="" placeholder="Enter username" class="form-control" autocomplete="off"/>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" value="" placeholder="Enter password" class="form-control"/>
    </div>

    <button class="btn btn-primary btn-sm">Login</button>
</form>